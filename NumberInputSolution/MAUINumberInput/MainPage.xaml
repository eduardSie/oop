<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MAUINumberInput.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout 
        Padding="30"
        Spacing="25"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label 
            Text="Введення цілого числа"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,0,0,30" />

        <Label 
            Text="Введіть ціле число:"
            FontSize="18"
            HorizontalOptions="Start" />

        <Entry 
            x:Name="NumberEntry"
            Placeholder="Наприклад: 42"
            Keyboard="Numeric"
            FontSize="20"
            WidthRequest="300"
            HorizontalTextAlignment="Center"
            MaxLength="10" />

        <Button 
            x:Name="SubmitButton"
            Text="Показати число"
            FontSize="18"
            BackgroundColor="#007ACC"
            TextColor="White"
            WidthRequest="300"
            HeightRequest="50"
            CornerRadius="10"
            Clicked="OnSubmitButtonClicked"
            Margin="0,20,0,0" />

        <Label 
            x:Name="ResultLabel"
            FontSize="20"
            FontAttributes="Bold"
            TextColor="Green"
            HorizontalOptions="Center"
            Margin="0,20,0,0"
            IsVisible="False" />

    </VerticalStackLayout>

</ContentPage>